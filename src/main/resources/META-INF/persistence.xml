<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="storePU">
        <class>com.taysirsoftware.store.entities.Category</class>
        <class>com.taysirsoftware.store.entities.Product</class>
        <class>com.taysirsoftware.store.entities.Client</class>
        <class>com.taysirsoftware.store.entities.Commande</class>
        <class>com.taysirsoftware.store.entities.LigneCommande</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/store" />
            <property name="jakarta.persistence.jdbc.user" value="root" />
            <property name="jakarta.persistence.jdbc.password" value="" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
    </persistence-unit>
</persistence>
